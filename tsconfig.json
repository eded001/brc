{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "types": [
      "jest"
    ],
    "ignoreDeprecations": "6.0",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@screens/*": [
        "src/features/*"
      ],
      "@navigation/*": [
        "src/app/navigation/*"
      ],
    }
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "./nativewind-env.d.ts",
    "./src",
    "./global.css",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "Pods"
  ]
}